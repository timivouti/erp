<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="/products/{{user.company}}">
					<em class="fa fa-home"></em>
				</a></li>
				<li class="active">Products</li>
			</ol>
		</div><!--/.row-->

				<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Products</h1>
			</div>
		</div><!--/.row-->

<div class="panel panel-container">
	<div class="panel-body table-responsive">	
    <a href="/products/{{user.company}}"><button type="button" class="btn btn-primary page-header" style="float:right">Back To Products</button></a>
    <h2 class="page-header">Edit Product</h2>
            {{#if errors}}
                {{#each errors}}
                    <div class="alert alert-danger">{{msg}}</div>
                {{/each}}
            {{/if}}
            {{#if success_msg}}
                <div class="alert alert-success">{{success_msg}}</div>
              {{/if}}
    {{#each result}}
    <form method="post" action="/products/edit/{{product_number}}/{{company_id}}">
    <div class="form-group">
        <label>Product Name</label>
        <input type="text" class="form-control" value="{{product_name}}" name="product_name">
    </div>
    <div class="form-group">
        <label>Unit price</label>
        <input type="number" class="form-control" value="{{unitprice}}" name="unitprice">
    </div>
    <div class="form-group">
        <label>Production Cost</label>
        <input type="number" class="form-control" value="{{production_cost}}" name="production_cost">
    </div>
    <div class="form-group">
        <label>VAT</label>
        <input type="number" class="form-control" value="{{vat}}" name="vat">
    </div>
    <button type="submit" class="btn btn-success">Edit</button>
</form>
{{/each}}