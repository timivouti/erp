	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="/settings/user">
					<em class="fa fa-home"></em>
				</a></li>
				<li class="active">User Settings</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">User Settings</h1>
			</div>
		</div><!--/.row-->

        <div class="panel panel-container">
		<div class="login-panel panel panel-default">
            <div class="panel-body">
              <h2 class="page-header">Change user settings</h2>
              {{#if success_msg}}
                <div class="alert alert-success">{{success_msg}}</div>
              {{/if}}

              {{#if error_msg}}
                <div class="alert alert-danger">{{error_msg}}</div>
              {{/if}}

              {{#if error}}
                <div class="alert alert-danger">{{error}}</div>
              {{/if}}
                {{#if errors}}
                    {{#each errors}}
                        <div class="alert alert-danger">{{msg}}</div>
                    {{/each}}
                {{/if}}
                <form method="post" action="/settings/user/update/{{{user.username}}}?_method=PUT">
                <div class="form-group">
                     <label>Name</label>
                      <input type="text" class="form-control" value="{{{user.name}}}" name="name">
                     </div>
                  <div class="form-group">
                 <label>Email</label>
                <input type="email" class="form-control" value="{{{user.email}}}" name="email">
                 </div>
                 <div class="form-group">
                 <label>Picture</label>
                <input type="url" class="form-control" value="{{{user.picture}}}" name="picture">
                 </div>
                 <button type="submit" class="btn btn-default">Save</button>
                 </div>
            </form>
            </div>
            </div>
